/*fun countLetterA(s: String): String {
    val lowerCaseString = s.lowercase()
    val count = lowerCaseString.count { it == 'a' }
    return if (count > 0) {
        "A letra 'a' aparece $count vez(es) na string."
    } else {
        "A letra 'a' não está presente na string."
    }
}

fun main() {
    print("Digite uma frase: ")
    val userInput = readLine() ?: ""
    println(countLetterA(userInput))
}*/

